{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  customManagers: [
    {
      customType: 'regex',
      description: 'Helm chart version when used with Terraform Helm module',
      fileMatch: [
        '\\.tf$',
      ],
      matchStrings: [
        'chart\\s*=\\s*"(?<depName>[^"\\s]+)"\\s*chart_version\\s*=\\s*"(?<currentValue>[^"\\s]+)"\\s*repository\\s*=\\s*"(?<registryUrl>[^"\\s]+)"',
      ],
      datasourceTemplate: 'helm',
    },
    {
      customType: 'regex',
      description: 'Process environment variables that contain version information',
      fileMatch: ['^.github/workflows/.*\\.ya?ml$'],
      matchStrings: [
        '[A-Z_]+_VERSION: (?<currentValue>.*) # (?<datasource>.*?)/(?<depName>.*?)\\s'
      ]
    },
    {
      customType: 'regex',
      description: 'kass - no comment',
      fileMatch: ['\\.tf$'],
      matchStrings: [
        'source\\s*=\\s*"tx-pts-dai/kubernetes-platform/aws"\\s*\\n\\s*version\\s*=\\s*"(?<currentValue>.*?)".*'
      ],
      depNameTemplate: 'tx-pts-dai/terraform-aws-kubernetes-platform',
      datasourceTemplate: 'github-releases',
    }
  ],
  packageRules: [
    {
      matchManagers: [
        'custom.regex',
      ],
      groupName: 'Terraform helm packages',
      groupSlug: 'terraform_helm',
    },
  ]
}

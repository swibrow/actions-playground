{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  customManagers: [
    {
      customType: 'regex',
      description: 'Helm chart version when used with Terraform Helm module',
      fileMatch: [
        '\\.tf$',
      ],
      matchStrings: [
        'chart\\s*=\\s*"(?<depName>[^"\\s]+)"\\s*chart_version\\s*=\\s*"(?<currentValue>[^"\\s]+)"\\s*repository\\s*=\\s*"(?<registryUrl>[^"\\s]+)"',
      ],
      datasourceTemplate: 'helm',
    },
    {
      customType: 'regex',
      fileMatch: [
        '^\\.github/workflows/.*\\.ya?ml$',
      ],
      matchStrings: [
        'TERRAFORM_DOCS_VERSION:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)',
        'TFLINT_VERSION:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)',
      ],
      extractVersionTemplate: '^v(?<version>.*)$',
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'terraform-docs/terraform-docs',
    },
  ],
  packageRules: [
    {
      matchManagers: [
        'custom.regex',
      ],
      groupName: 'Terraform helm packages',
      groupSlug: 'terraform_helm',
    },
    {
      matchFileNames: [
        '.github/workflows/**',
      ],
      matchPackageNames: [
        '/terraform-docs/terraform-docs/',
        '/terraform-linters/tflint/',
      ],
    },
  ],
  enabledManagers: [
    'custom.regex',
  ],
}
